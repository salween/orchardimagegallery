@using Mello.ImageGallery.Helpers
@using System.Web.Mvc.Html
@{ Style.Require("ImageGallery"); }

@model Mello.ImageGallery.ViewModels.ImageGalleryViewModel

<script type="text/javascript">
    $(document).ready(function () {        
        @Html.ImageGalleryScript("#gallery a", Model.ImageGalleryPlugin) 
    });
</script>

<div id="gallery">
    <ul>
        @foreach (var image in Model.Images)
        {
        <li>
            <a href="@image.PublicUrl" title="@image.Title" @Html.ImageGalleryAdditionalAttributes(Model.ImageGalleryPlugin)>
                <img src="@image.ThumbnailPublicUrl" alt="@image.Caption" />
            </a>            
        </li>
        }                     
    </ul>     
</div>



